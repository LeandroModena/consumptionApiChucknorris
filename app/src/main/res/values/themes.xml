<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChuckNorrisioio" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>

        <item name="colorSecondary">@color/teal_200</item>

    </style>

    <style name="Theme.ChuckNorrisioio.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ChuckNorrisioio.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChuckNorrisioio.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ChuckNorrisioio.Fullscreen" parent="Theme.Design.NoActionBar">

        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.ChuckNorrisioio.FullscreenContainer" parent="Theme.Design.NoActionBar">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>